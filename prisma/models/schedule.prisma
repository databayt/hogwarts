// Weekly schedule configuration per school/term

model SchoolWeekConfig {
  id                      String  @id @default(cuid())
  schoolId                String
  termId                  String?
  workingDays             Int[] // e.g., [0,1,2,3,4] for Sunâ€“Thu
  defaultLunchAfterPeriod Int?
  extraLunchRules         Json?

  school School @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  term   Term?  @relation(fields: [termId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([schoolId, termId])
  @@map("school_week_configs")
}
