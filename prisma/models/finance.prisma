}

model Budget {
  id           String       @id @default(cuid())
  schoolId     String
  fiscalYearId String
  name         String
  description  String?      @db.Text
  departmentId String?
  totalAmount  Decimal      @db.Decimal(12, 2)
  status       BudgetStatus @default(DRAFT)
  approvedBy   String?
  approvedAt   DateTime?
